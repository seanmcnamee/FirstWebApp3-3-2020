
@model Vidly.ViewModels.MovieListViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.Movies.Count == 0)
{
    <text>No Movies Available</text>
}   else
{
    <ul>
        @foreach (var Movie in Model.Movies)
        {
            <li>@Movie.Name</li>
        }
    </ul>
}

